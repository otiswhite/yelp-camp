<!-- using ejsmate inject boilerplate -->
<%- layout("layouts/boilerplate") %>

<!-- page showing error messages in a user friedly way  -->
<div class="row">
	<div class="col-6 offset-3">
		<div class="alert alert-danger" role="alert">
			<h4 class="alert-heading"><%= err.message %></h4>
			<!-- error stack will show in development mode only -->
			<% if (process.env.NODE_ENV !== "production") { %>
			<p><%= err.stack %></p>
			<% } %>
		</div>
	</div>
</div>
